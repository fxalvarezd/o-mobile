.pg-resources
    .search-box(style="visibility:hidden")
        i.fa.fa-search
        span.search-hint SEARCH / FILTER
    .page-heading
        h1.title We Are Here to Help
        h2.subtitle Lorem ipsum dolor
    .post-item(ng-repeat="post in [1,2,3,4]")
        .post-content
            img.img-responsive.mb-lg(src="app/img/fpo/image.png", alt="xxx", ui-sref="app.post({'id': 'postId'})")
            .clearfix
                .post-date.pull-left 06.30.15 
                .pull-right.ml
                    i.fa.fa-comment
                .pull-right
                    i.fa.fa-share-square-o
            .post-title.mb(ui-sref="app.resource({'id': 'resourceId'})") Open Source Content Management
            .clearfix
                img.author-img.pull-left(src="app/img/fpo/author.jpg", alt="xxx", height="45", width="45")
                span.author-text.pull-left / Cesar Yanez / Developer
            hr
    .search-overlay
        .search-box
            i.fa.fa-search
            span.search-hint SEARCH / FILTER
            .close X
        .row
            .large-12.columns
                form.form
                    label.text-label Search
                    input.text-input(type="text")
                    label.text-label Filter
                    select.select-input
                        option All Categories
                    label.checkbox-label(for="blogPosts")
                        input(type="checkbox", id="blogPosts")
                        span.checkbox-label-text Blog Posts
                    label.checkbox-label(for="whitePapers")
                        input(type="checkbox", id="whitePapers")
                        span.checkbox-label-text White Papers